<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vamsidharreddy.kisan.Details"
    tools:showIn="@layout/activity_details">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:id="@+id/textview"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"

            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/ShowImageView"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textview"
            android:layout_marginTop="54dp"
            android:background="#ff99cc00" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonChooseImage"
            android:layout_below="@+id/ShowImageView"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:text="Choose Image"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText"
            android:layout_below="@+id/ButtonChooseImage"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:hint="Crop or plant Name"
            android:gravity="center"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText1"
            android:layout_below="@+id/ImageNameEditText"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:hint="Symptoms of disease"
            android:gravity="center"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText2"
            android:layout_below="@+id/ImageNameEditText1"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:hint="Soil Type"
            android:gravity="center"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ADDRESS"
            android:id="@+id/textview1"
            android:layout_below="@+id/ImageNameEditText2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:gravity="center"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText3"
            android:layout_below="@+id/textview1"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:hint="Town/Village"
            android:gravity="center"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText4"
            android:layout_below="@+id/ImageNameEditText3"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:hint="DOOR.No"
            android:gravity="center"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText5"
            android:layout_below="@+id/ImageNameEditText4"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:hint="Post area"
            android:gravity="center"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText6"
            android:layout_below="@+id/ImageNameEditText5"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:hint="Mandal"
            android:gravity="center"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText7"
            android:layout_below="@+id/ImageNameEditText6"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:hint="District"
            android:gravity="center"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText8"
            android:layout_below="@+id/ImageNameEditText7"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:hint="State"
            android:gravity="center"/>

        <EditText
            android:id="@+id/ImageNameEditText9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageNameEditText8"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:maxLength="6"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:hint="Pincode"
            android:inputType="number" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText10"
            android:layout_below="@+id/ImageNameEditText9"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:text="no status"
            android:editable="false"
            android:gravity="center"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText11"
            android:layout_below="@+id/ImageNameEditText10"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:text="no status"
            android:editable="false"
            android:gravity="center"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText12"
            android:layout_below="@+id/ImageNameEditText11"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:text="no status"
            android:editable="false"
            android:gravity="center"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImageNameEditText13"
            android:layout_below="@+id/ImageNameEditText12"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:hint="ID"

            android:gravity="center"/>




        <Button
            android:id="@+id/ButtonUploadImage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ImageNameEditText13"
            android:layout_marginTop="31dp"
            android:background="@drawable/button"
            android:text="Upload" />


    </RelativeLayout>


</ScrollView>
